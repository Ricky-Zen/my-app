<div>
  <div class="w-full bg-red-500 h-12"><h1 class="font-bold text-4xl">Love Messages</h1></div>
  <% @lovemessages.each do |lovemessage| %>
  <div class="container m-auto mb-8 md:mb-16 pb-10 md:p-0 md:w-2/4">
    <div class="max-w-sm w-full lg:max-w-full lg:flex">
      <div class="h-48 lg:h-auto lg:w-48 flex-none bg-cover rounded-t lg:rounded-t-none lg:rounded-l text-center overflow-hidden" style="background-image: url('https://i.pinimg.com/originals/86/b0/94/86b094ca7a4d070a346fe6b5a0fe5e53.jpg')" title="Woman holding a mug">
      </div>
      <div class="border-r border-b border-l border-gray-400 lg:border-l-0 lg:border-t lg:border-gray-400 bg-white rounded-b lg:rounded-b-none lg:rounded-r p-4 flex flex-col justify-between leading-normal">
        <div class="mb-8">
          <p class="text-sm text-gray-600 flex items-center">
            Admin only
          </p>
          <div class="text-gray-900 font-bold text-xl mb-2">From <%= lovemessage.adress %></div>
          <p class="text-gray-700 text-base"><%= lovemessage.letter %></p>
        </div>
        <div class="flex items-center">
          <div class="text-sm">
            <p class="text-gray-900 leading-none"><%= lovemessage.first_name %> <%= lovemessage.name %></p>
            <p class="text-pink-600"><%= lovemessage.created_at %></p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  </div>
</div>