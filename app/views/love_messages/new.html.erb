<div>
  <h1 class="font-bold text-4xl">LoveMessages#new</h1>
  <div>
  <%= form_with model: @lovemessage do |f| %>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :letter %>
    <%= f.text_field :letter %>
    <%= f.label :address %>
    <%= f.text_field :address %>
    <%= f.label :zip_code %>
    <%= f.number_field :zip_code %>
    <%= f.submit %>
  <% end %>
  </div>
</div>
